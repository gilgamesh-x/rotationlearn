<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:centerColor="#99FF8127"
                android:endColor="#99FFC85C"
                android:startColor="#99FF8127"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:centerColor="#1D1921"
                android:endColor="#3C3B3D"
                android:startColor="#1D1921"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>