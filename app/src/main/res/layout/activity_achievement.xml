                    android:text="@string/lbl_achievement_6"
                    android:textColor="#FFFFFF"
                    android:textFontWeight="600"
                    android:textSize="16sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:overScrollMode="never">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_ach_km_fa"
                            android:layout_width="131dp"
                            android:layout_height="131dp"
                            android:elevation="1dp"
                            android:src="@drawable/icon_ach_km_fa"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/icon_ach_km2_fa"
                            android:layout_width="131dp"
                            android:layout_height="131dp"
                            android:elevation="1dp"
                            android:src="@drawable/icon_ach_km2_fa"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/icon_ach_km3_fa"
                            android:layout_width="131dp"
                            android:layout_height="131dp"
                            android:elevation="1dp"
                            android:src="@drawable/icon_ach_km3_fa"
                            android:visibility="visible" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView25_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/lbl_achievement_7"
                    android:textColor="#FFFFFF"
                    android:textFontWeight="600"
                    android:textSize="16sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:overScrollMode="never">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_ach_event_fa"
                            android:layout_width="131dp"
                            android:layout_height="131dp"
                            android:elevation="1dp"
                            android:src="@drawable/icon_ach_event_fa"
